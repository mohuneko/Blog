<div class="col-sm-9">
<h2>Users</h2>
    <table class="table table-hover table-inverse">
      <tr>
        <th class="col-md-2 table-noborder"></th>
        <th class="col-md-3 table-noborder"></th>
        <th class="col-md-3 table-noborder"></th>
        <th class="col-md-2 table-noborder"></th>
        <th class="col-md-2 table-noborder"></th>
      </tr>
      <% @books.each do |book| %>
        <tr>
          <td>
          <%= link_to user_path do %>
  　　　　　<%= attachment_image_tag current_user, :profile_image, size:'50x50' %>
  　　　　　<%= current_user.name %>
　　　　　　<% end %>
          </td>
          <td>
          <%= link_to book_path(book.id)  do %>
            <%= book.title %>
          <% end %>
          </td>
          <td>
            <%= book.opinion %>
          </td>
          <td>
          	<% if current_user == book.user %>
          	<%= link_to "edit", edit_book_path(book.id), class:"btn-sm btn-success" %>
          </td>
          <td>
          	<%= link_to "destroy", book_path(book.id), class:"btn-sm btn-danger", method: :delete, data: {confirm: "本当に消しますか？"} %>
          	<% end %>
          </td>
        </tr>
      <% end %>
    </table>
    </div>
  </div>
  </div>
</div>
