<div class="container">
<div clss="row">
 <%= render 'layouts/sidebar' %>
<div class="col-xs-9">
    <h2>Book detail</h2>
    <table class="table table-hover table-inverse">
      <tr>
        <th class="col-md-2 table-noborder"></th>
        <th class="col-md-3 table-noborder"></th>
        <th class="col-md-3 table-noborder"></th>
        <th class="col-md-2 table-noborder"></th>
        <th class="col-md-2 table-noborder"></th>
      </tr>
        <tr>
          <td>
          <%= link_to user_path(@books.user) do %>
  　　　　　<%= attachment_image_tag @books.user, :profile_image, size:'50x50' %>
  　　　　　<%= @books.user.name %>
　　　　　　<% end %>
          </td>
          <td>
          <%= link_to book_path(@books.id)  do %>
            <%= @books.title %>
          <% end %>
          </td>
          <td>
            <%= @books.body %>
          </td>
          <td>
          	<% if current_user == @books.user %>
          	<%= link_to "edit", edit_book_path(@books.id), class:"btn-sm btn-success" %>
          </td>
          <td>
          	<%= link_to "destroy", book_path(@books.id), class:"btn-sm btn-danger", method: :delete, data: {confirm: "本当に消しますか？"} %>
          	<% end %>
          </td>
        </tr>
    </table>
    </div>
  </div>
  </div>