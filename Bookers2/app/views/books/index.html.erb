  <div class="container">
  <div class="row">
  <div class="col-sm-3 sidenav">
  <h2>New Book</h2>
  <%= form_for(@book) do |f| %>
     <h4>Title</h4>
     <%= f.text_field :title %>

     <h4>Opinion</h4>
     <%= f.text_field :opinion %><br>

     <%#
     <input type="submit" name="commit" value="Create Book" class="btn btn-primary col-xs-12" data-disable-with="Create Book">%>
     <%= f.submit "Create Book", class: "btn btn-primary col-xs-12 field" %>
   </div>
  <% end %>

  <div class="col-sm-9">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
      <tr>
        <th class="col-md-2 table-noborder"></th>
        <th class="col-md-3 table-noborder">Title</th>
        <th class="col-md-3 table-noborder">Opinion</th>
        <th class="col-md-2 table-noborder"></th>
        <th class="col-md-2 table-noborder"></th>
      </tr>
      <% @books.each do |book| %>
        <tr>
          <td>
            teset
          </td>
          <td>
          <%= link_to book_path(book.id)  do %>
            <%= book.title %>
          <% end %>
          </td>
          <td>
            <%= book.opinion %>
          </td>
        </tr>
      <% end %>
    </table>
    </div>
  </div>
  </div>
</div>